{
  "name": "ignition",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:migrate": "npm run db:migrate:local && next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint",
    "build:worker": "npx @opennextjs/cloudflare build",
    "preview": "npm run build && npm run build:worker && wrangler dev",
    "deploy": "npm run build && npm run build:worker && wrangler deploy",
    "deploy:full": "./scripts/deploy-full.sh",
    "deploy:preview": "npm run deploy -- --env preview",
    "deploy:dry-run": "npm run build && npm run build:worker && wrangler deploy --dry-run",
    "typegen": "wrangler types",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run check && npm run test:unit && npm run build && npm run test:e2e",
    "check:storage": "node scripts/check-storage-compliance.mjs",
    "db:generate": "wrangler d1 migrations create passion_os",
    "db:migrate:local": "wrangler d1 migrations apply passion_os --local",
    "db:migrate:prod": "wrangler d1 migrations apply passion_os --remote",
    "db:migrate:file:local": "wrangler d1 execute passion_os --local --file",
    "db:migrate:file:prod": "wrangler d1 execute passion_os --remote --file",
    "db:studio:local": "wrangler d1 execute passion_os --local --command 'SELECT 1'",
    "db:reset:local": "rm -rf .wrangler/state && npm run db:migrate:local",
    "db:reset:full:local": "chmod +x ./scripts/reset-local-db.sh && ./scripts/reset-local-db.sh",
    "db:reset:full:remote": "chmod +x ./scripts/reset-remote-db.sh && ./scripts/reset-remote-db.sh",
    "db:seed:local": "wrangler d1 execute passion_os --local --file=migrations/0020_seed_data.sql",
    "db:seed:remote": "wrangler d1 execute passion_os --remote --file=migrations/0020_seed_data.sql",
    "db:seed:exercises": "node scripts/seed-exercises.mjs",
    "db:reset:master:local": "wrangler d1 execute ignition --local --file=migrations/0100_master_reset.sql",
    "db:reset:master:remote": "wrangler d1 execute ignition --remote --file=migrations/0100_master_reset.sql",
    "dev:wrangler": "npm run build && npm run build:worker && wrangler dev",
    "dev:d1": "npm run db:migrate:local && npm run build && npm run build:worker && wrangler dev",
    "dev:local": "npm run db:migrate:local && next dev --turbopack",
    "generate:snapshot": "npx tsx scripts/generate-current-state.ts"
  },
  "dependencies": {
    "@auth/d1-adapter": "^1.7.4",
    "@wavesurfer/react": "^1.0.12",
    "audiomotion-analyzer": "^4.5.3",
    "butterchurn": "^2.6.7",
    "butterchurn-presets": "^2.4.7",
    "howler": "^2.2.4",
    "next": "^15.1.3",
    "next-auth": "^5.0.0-beta.25",
    "react": "^19.0.0",
    "react-audio-visualize": "^1.2.0",
    "react-dom": "^19.0.0",
    "wavesurfer.js": "^7.12.1",
    "zod": "^3.24.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "@eslint/eslintrc": "^3.2.0",
    "@opennextjs/cloudflare": "^1.3.0",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.3",
    "jsdom": "^25.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^4.53.0"
  }
}
